<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_topitem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px194">
    <TextView
        android:textSize="@dimen/px25"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px35"
        android:layout_marginLeft="@dimen/px60"
        android:text="TOP:1"/>
    <TextView
        android:textSize="@dimen/px32"
        android:textStyle="bold"
        android:textColor="#fc4b4b"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px35"
        android:layout_marginTop="@dimen/px65"
        android:layout_marginRight="@dimen/px30"
        android:text=""
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/buyBody"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px46"
        android:layout_marginTop="@dimen/px25"
        android:layout_marginRight="@dimen/px30"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true">
        <TextView
            android:textSize="@dimen/px22"
            android:textStyle="bold"
            android:textColor="#fc4b4b"
            android:gravity="bottom"
            android:layout_gravity="center_vertical"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px35"
            android:layout_marginRight="@dimen/px10"
            android:text="$ 0.5"/>
        <Button
            android:textSize="@dimen/px22"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/buy"
            android:background="@drawable/selector_button_v2"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px36"
            android:text="@string/select"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/shopCar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:textSize="@dimen/px32"
                android:textColor="#eb6a9b"
                android:id="@+id/bt_reduce"
                android:background="@drawable/ico_tuzhi2"
                android:paddingTop="@dimen/px5"
                android:layout_width="@dimen/px43"
                android:layout_height="@dimen/px46"
                android:text="-"/>
            <TextView
                android:textSize="@dimen/px22"
                android:textColor="#ff0000"
                android:gravity="center"
                android:id="@+id/count"
                android:layout_width="@dimen/px45"
                android:layout_height="@dimen/px46"
                android:text="0"/>
            <Button
                android:textSize="@dimen/px32"
                android:textColor="#eb6a9b"
                android:id="@+id/bt_add"
                android:background="@drawable/ico_tuzhi2"
                android:paddingTop="@dimen/px5"
                android:layout_width="@dimen/px43"
                android:layout_height="@dimen/px46"
                android:text="+"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/image"
        android:padding="@dimen/px10"
        android:layout_width="@dimen/px195"
        android:layout_height="@dimen/px160"
        android:layout_marginLeft="@dimen/px20"
        android:src="@drawable/img_shs"
        android:layout_below="@+id/title"/>
    <ImageView
        android:id="@+id/saleout"
        android:padding="@dimen/px10"
        android:layout_width="@dimen/px195"
        android:layout_height="@dimen/px160"
        android:layout_marginLeft="@dimen/px20"
        android:src="@drawable/ico_sale_out"
        android:layout_below="@+id/title"/>
</RelativeLayout>
