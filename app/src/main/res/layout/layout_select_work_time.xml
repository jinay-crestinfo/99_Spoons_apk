<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/select_dialog_bg"
    android:paddingLeft="10px"
    android:paddingTop="10px"
    android:paddingRight="10px"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_start"
            style="@style/normal_text"/>
        <Button
            android:id="@+id/bt_start_reduce"
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="-"
            style="@style/normal_text"/>
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="@dimen/x100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            style="@style/normal_text"/>
        <Button
            android:id="@+id/bt_start_add"
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="+"
            style="@style/normal_text"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_stop"
            style="@style/normal_text"/>
        <Button
            android:id="@+id/bt_end_reduce"
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="-"
            style="@style/normal_text"/>
        <TextView
            android:id="@+id/tv_end"
            android:layout_width="@dimen/x100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            style="@style/normal_text"/>
        <Button
            android:id="@+id/bt_end_add"
            android:layout_width="@dimen/x60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="+"
            style="@style/normal_text"/>
    </LinearLayout>
    <View
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="10px"
        android:paddingRight="20dp"
        android:paddingBottom="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="#fff"
            android:id="@+id/bt_cancel"
            android:background="@drawable/selector_dialog_tip_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:text="@string/button_cancel"
            android:layout_weight="1"/>
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="#fff"
            android:id="@+id/bt_ok"
            android:background="@drawable/selector_dialog_tip_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:layout_marginLeft="30dp"
            android:text="@string/button_ok"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
