<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/RelativeLayout1"
    android:background="@drawable/img_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/bar_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80">
        <TextView
            android:textSize="@dimen/px24"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/machineIdAndVer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0000000000"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="@dimen/px24"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/connect_vmd_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px20"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextClock
            android:textSize="@dimen/px24"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px10"
            android:text=""
            android:format24Hour="yyyy-MM-dd hh:mm:ss,EE"/>
        <TextView
            android:textSize="@dimen/px24"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/net_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px10"
            android:minWidth="@dimen/px100"
            android:text="wifi (strong)"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/phone"
        android:clickable="true"
        android:layout_width="@dimen/px150"
        android:layout_height="@dimen/px150"
        android:layout_marginTop="@dimen/px120"
        android:layout_marginRight="@dimen/px100"
        android:src="@drawable/ico_phone"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/moneybar"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px105"
        android:layout_marginBottom="@dimen/px200"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <Button
            android:textSize="@dimen/px40"
            android:textColor="#ff8080"
            android:id="@+id/bt_money"
            android:background="@drawable/selector_button_money"
            android:clickable="false"
            android:layout_width="@dimen/px347"
            android:layout_height="match_parent"
            android:text="@string/lab_insertmoney"/>
        <Button
            android:id="@+id/bt_charge"
            android:background="@drawable/selector_button_charge"
            android:layout_width="@dimen/px347"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px100"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px80"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/bt_classic"
            android:background="@drawable/selector_button_jddp"
            android:layout_width="@dimen/px347"
            android:layout_height="@dimen/px105"/>
        <Button
            android:id="@+id/bt_freecollocation"
            android:background="@drawable/selector_button_zydp"
            android:layout_width="@dimen/px347"
            android:layout_height="@dimen/px105"
            android:layout_marginLeft="@dimen/px100"/>
    </LinearLayout>
</RelativeLayout>
