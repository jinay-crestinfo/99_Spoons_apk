<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/select_dialog_bg"
    android:padding="@dimen/x20"
    android:layout_width="@dimen/x1060"
    android:layout_height="@dimen/y1860">
    <Button
        android:textSize="@dimen/text_size_normal"
        android:textColor="@android:color/white"
        android:id="@+id/bt_take_pic"
        android:background="@drawable/selector_dialog_tip_button"
        android:paddingLeft="@dimen/x20"
        android:paddingTop="@dimen/x10"
        android:paddingRight="@dimen/x20"
        android:paddingBottom="@dimen/x10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_pic"
        android:layout_alignParentRight="true"/>
    <SurfaceView
        android:id="@+id/verifySurfaceView"
        android:layout_width="@dimen/x1024"
        android:layout_height="@dimen/y768"
        android:layout_marginTop="@dimen/y20"
        android:layout_below="@+id/bt_take_pic"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/x1024"
        android:layout_height="@dimen/y768"
        android:layout_marginTop="@dimen/y40"
        android:layout_below="@+id/verifySurfaceView"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x20"
        android:paddingTop="@dimen/y40"
        android:paddingRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="@dimen/text_size_lsmall"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/bt_cancel"
            android:background="@drawable/selector_dialog_tip_button"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:layout_marginLeft="@dimen/x30"
            android:text="@string/lab_disable"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
