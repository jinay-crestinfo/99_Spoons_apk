<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/select_dialog_bg"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/body"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/dailog_padding"
        android:layout_marginRight="@dimen/x20"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/text_size_lsmall"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tip"/>
        <ScrollView
            android:id="@+id/sv_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y400"
            android:minWidth="@dimen/x500"
            android:layout_weight="1">
            <TextView
                android:textSize="@dimen/text_size_lsmall"
                android:textStyle="normal"
                android:textColor="#000"
                android:textColorHint="#000"
                android:gravity="left"
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x15"
                android:alpha="0.8"/>
        </ScrollView>
    </LinearLayout>
    <View
        android:id="@+id/divider_line"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dailog_padding"
        android:layout_marginRight="@dimen/dailog_padding"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x20"
        android:paddingTop="@dimen/y20"
        android:paddingRight="@dimen/x20"
        android:paddingBottom="@dimen/y20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8">
        <Button
            android:textSize="@dimen/text_size_lsmall"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/button01"
            android:background="@drawable/selector_dialog_tip_button"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:layout_weight="1"/>
        <Button
            android:textSize="@dimen/text_size_lsmall"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/button02"
            android:background="@drawable/selector_dialog_tip_button"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:layout_marginLeft="@dimen/x30"
            android:layout_weight="1"/>
        <Button
            android:textSize="@dimen/text_size_lsmall"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/button03"
            android:background="@drawable/selector_dialog_tip_button"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:layout_marginLeft="@dimen/x30"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
