<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_corner_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="@dimen/px36"
            android:textStyle="bold"
            android:textColor="@color/text_for"
            android:layout_gravity="right"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginRight="@dimen/px30"
            android:text=""
            android:layout_below="@+id/qrcode"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/qrcode"
            android:layout_width="@dimen/px630"
            android:layout_height="@dimen/px500"
            android:layout_marginTop="@dimen/px60"
            android:src="@drawable/img_qrcode_def"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/px22"
            android:textStyle="bold"
            android:textColor="@color/black_text_color"
            android:layout_gravity="center_horizontal"
            android:id="@+id/qrcodelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginRight="@dimen/px30"
            android:text="1234567789"
            android:layout_below="@+id/qrcode"
            android:layout_centerHorizontal="true"/>
        <RadioGroup
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/payTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30">
            <RadioButton
                android:id="@+id/pay_wx"
                android:background="@drawable/selector_button_pay"
                android:paddingTop="@dimen/px12"
                android:layout_width="@dimen/px230"
                android:layout_height="@dimen/px75"
                android:button="@null"
                android:drawableTop="@drawable/bt_pay_wx"/>
            <RadioButton
                android:id="@+id/pay_zfb"
                android:background="@drawable/selector_button_pay"
                android:paddingTop="@dimen/px12"
                android:layout_width="@dimen/px230"
                android:layout_height="@dimen/px75"
                android:layout_marginLeft="@dimen/px25"
                android:button="@null"
                android:drawableTop="@drawable/bt_pay_zfb"/>
            <RadioButton
                android:id="@+id/pay_jd"
                android:background="@drawable/selector_button_pay"
                android:paddingTop="@dimen/px12"
                android:layout_width="@dimen/px230"
                android:layout_height="@dimen/px75"
                android:button="@null"
                android:drawableTop="@drawable/bt_pay_jd"/>
        </RadioGroup>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="@dimen/px760"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px300"
            android:layout_marginTop="@dimen/px100"
            android:layout_marginRight="@dimen/px300"
            android:layout_marginBottom="@dimen/px60">
            <TextView
                android:textSize="@dimen/px36"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/closeBtn"
                android:background="@drawable/selector_button_money_en"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150"
                android:text="@string/button_cancel"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
