<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/shape_corner_dialog"
    android:paddingLeft="@dimen/px20"
    android:paddingRight="@dimen/px20"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/px250">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/px48"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正在推出商品..."/>
        <TextView
            android:textSize="@dimen/px42"
            android:gravity="right"
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_remain"/>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/img_left"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px30"
            android:scaleType="fitCenter"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30"
            android:layout_marginBottom="@dimen/px30"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/img_right"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px30"
            android:scaleType="fitCenter"/>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:background="@color/gray_background"
        android:paddingLeft="@dimen/px20"
        android:paddingRight="@dimen/px20"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/px20"
        android:layout_marginBottom="@dimen/px20"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px1"
        android:layout_marginBottom="@dimen/px20">
        <ImageView
            android:id="@+id/notice_ico"
            android:layout_width="@dimen/px120"
            android:layout_height="@dimen/px120"
            android:layout_marginLeft="@dimen/px60"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="@dimen/px32"
            android:layout_gravity="center_vertical"
            android:id="@+id/notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px15"
            android:text=""
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
