<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/select_dialog_bg"
    android:paddingLeft="10px"
    android:paddingRight="10px"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <Button
            android:textSize="@dimen/text_normal"
            android:textColor="@color/color_text"
            android:gravity="center"
            android:id="@+id/bt_add"
            android:visibility="gone"
            android:layout_width="@dimen/x120"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y22"
            android:text="+"/>
        <EditText
            android:textSize="@dimen/text_normal"
            android:textColor="@color/color_text"
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y22"
            android:layout_weight="1"
            android:inputType="numberDecimal"/>
        <Button
            android:textSize="@dimen/text_normal"
            android:textColor="@color/color_text"
            android:gravity="center"
            android:id="@+id/bt_reduce"
            android:visibility="gone"
            android:layout_width="@dimen/x120"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y22"
            android:text="-"/>
    </LinearLayout>
    <View
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="10px"
        android:paddingRight="20dp"
        android:paddingBottom="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="#fff"
            android:id="@+id/bt_ok"
            android:background="@drawable/selector_dialog_tip_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:text="@string/button_ok"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
