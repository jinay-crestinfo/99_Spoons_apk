<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_date_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setting_item_button_height"
            android:layout_marginLeft="@dimen/setting_item_button_left"
            android:layout_marginTop="@dimen/setting_item_button_top"
            android:layout_marginBottom="@dimen/setting_item_button_bottom"
            android:text="@string/setting_system_item_date"
            android:layout_centerVertical="true"
            style="@style/normal_text"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_date"
            android:background="@drawable/bank_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_setting_item_height"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_toRightOf="@+id/tv_date_name"
            android:layout_centerVertical="true"
            style="@style/normal_text"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setting_item_button_height"
            android:layout_marginLeft="@dimen/setting_item_button_left"
            android:layout_marginTop="@dimen/setting_item_button_top"
            android:layout_marginBottom="@dimen/setting_item_button_bottom"
            android:text="@string/setting_system_item_time"
            android:layout_centerVertical="true"
            style="@style/normal_text"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_time"
            android:background="@drawable/bank_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_setting_item_height"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_toRightOf="@+id/tv_time_name"
            android:layout_centerVertical="true"
            style="@style/normal_text"/>
    </LinearLayout>
</LinearLayout>
