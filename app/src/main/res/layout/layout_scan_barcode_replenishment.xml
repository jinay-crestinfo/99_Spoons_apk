<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="@dimen/x20"
    android:layout_width="@dimen/x1000"
    android:layout_height="@dimen/y1600">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_normal"
            android:textColor="@color/color_text"
            android:gravity="center"
            android:id="@+id/tv_scan_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:textSize="@dimen/text_size_lsmall"
            android:id="@+id/bt_cancel"
            android:background="@drawable/dialog_close"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_layer_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:layout_below="@+id/ll_machine_no"/>
    <ListView
        android:id="@+id/lv_scan_shelf_tip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_bottom"
        android:paddingTop="@dimen/y20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/bt_calculate_auto"
            android:background="@drawable/selector_soft_manage_button"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:text="@string/calculate_count_auto"
            android:layout_weight="2"/>
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/bt_regetdata"
            android:background="@drawable/selector_soft_manage_button"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/reget_data"
            android:layout_weight="2.5"/>
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/bt_qrcode_input"
            android:background="@drawable/selector_soft_manage_button"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/qrcode_input"
            android:layout_weight="1.2"/>
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/bt_upload"
            android:background="@drawable/selector_soft_manage_button"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:layout_marginLeft="@dimen/x20"
            android:text="@string/save_setting"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
