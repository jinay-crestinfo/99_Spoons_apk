<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/select_dialog_bg"
    android:paddingLeft="10px"
    android:paddingRight="10px"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"/>
    <View
        android:background="@color/color_text"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/y20"/>
    <GridView
        android:id="@+id/listView"
        android:layout_width="@dimen/x1000"
        android:layout_height="@dimen/y400"
        android:numColumns="33"/>
    <View
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="10px"
        android:paddingRight="20dp"
        android:paddingBottom="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <Button
            android:textSize="@dimen/text_small"
            android:textColor="#fff"
            android:id="@+id/bt_ok"
            android:background="@drawable/selector_dialog_tip_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/dailog_button_normal_height"
            android:text="@string/button_ok"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
