<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_corner_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/body"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/px120"
        android:layout_weight="1">
        <EditText
            android:textSize="@dimen/px50"
            android:textStyle="bold"
            android:textColor="@color/st_goodname"
            android:id="@+id/code"
            android:background="@drawable/selector_code_text"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120"
            android:layout_marginLeft="@dimen/px120"
            android:layout_marginRight="@dimen/px120"
            android:text=""
            android:editable="false"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px120"
            android:paddingRight="@dimen/px120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50">
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:id="@+id/bt_1"
                android:tag="1"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:text="1"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:id="@+id/bt_2"
                android:tag="2"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px30"
                android:text="2"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:id="@+id/bt_3"
                android:tag="3"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:text="3"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px120"
            android:paddingRight="@dimen/px120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50">
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:id="@+id/bt_4"
                android:tag="4"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:text="4"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:id="@+id/bt_5"
                android:tag="5"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px30"
                android:text="5"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:id="@+id/bt_6"
                android:tag="6"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:text="6"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px120"
            android:paddingRight="@dimen/px120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50">
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:id="@+id/bt_7"
                android:tag="7"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:text="7"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:id="@+id/bt_8"
                android:tag="8"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px30"
                android:text="8"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:id="@+id/bt_9"
                android:tag="9"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:text="9"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px120"
            android:paddingRight="@dimen/px120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/bt_clear"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/px40"
                    android:textStyle="bold"
                    android:textColor="@color/st_goodname"
                    android:gravity="center"
                    android:tag="99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yhm_clear"/>
                <TextView
                    android:textSize="@dimen/px24"
                    android:textStyle="bold"
                    android:textColor="@color/st_goodname"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLEAR"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:id="@+id/bt_0"
                android:tag="0"
                android:background="@drawable/selector_code_text"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px30"
                android:text="0"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/bt_delete"
                android:background="@drawable/selector_code_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/px120"
                android:layout_weight="1">
                <TextView
                    android:textSize="@dimen/px40"
                    android:textStyle="bold"
                    android:textColor="@color/st_goodname"
                    android:gravity="center"
                    android:tag="99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yhm_delete"/>
                <TextView
                    android:textSize="@dimen/px24"
                    android:textStyle="bold"
                    android:textColor="@color/st_goodname"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELETE"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px120"
        android:layout_marginTop="@dimen/px100"
        android:layout_marginRight="@dimen/px120"
        android:layout_marginBottom="@dimen/px120">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/cancel"
            android:background="@drawable/selector_button_money_en"
            android:layout_width="@dimen/px300"
            android:layout_height="@dimen/px140">
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yhm_cancle"/>
            <TextView
                android:textSize="@dimen/px24"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCLE"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ok"
            android:background="@drawable/selector_button_next"
            android:layout_width="@dimen/px300"
            android:layout_height="@dimen/px140">
            <TextView
                android:textSize="@dimen/px40"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_ok"/>
            <TextView
                android:textSize="@dimen/px24"
                android:textStyle="bold"
                android:textColor="@color/st_goodname"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRM"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
