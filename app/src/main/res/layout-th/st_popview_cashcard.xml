<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_corner_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="@dimen/px36"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_gravity="right"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginRight="@dimen/px30"
            android:text=""
            android:layout_below="@+id/qrcode"/>
        <TextView
            android:textSize="@dimen/px36"
            android:textStyle="bold"
            android:textColor="@color/st_goodname"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginRight="@dimen/px30"
            android:text="กรุณาชำระเงินภายในเวลา 5 นาที"
            android:layout_below="@+id/qrcode"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="@dimen/px22"
            android:textColor="@color/st_goodname"
            android:layout_gravity="center_horizontal"
            android:id="@+id/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginRight="@dimen/px30"
            android:text="Please pay within 5 minutes."
            android:layout_below="@+id/qrcode"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:textColor="@color/white"
            android:id="@+id/cardNo"
            android:background="@color/white"
            android:layout_width="@dimen/px100"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/image"
            android:layout_width="@dimen/px430"
            android:layout_height="@dimen/px430"
            android:layout_marginTop="@dimen/px60"
            android:src="@drawable/st_paycard2"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/moneybar"
            android:visibility="invisible"
            android:layout_width="@dimen/px760"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px300"
            android:layout_marginTop="@dimen/px40"
            android:layout_marginRight="@dimen/px300"
            android:layout_marginBottom="@dimen/px60">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px100">
                <TextView
                    android:textSize="@dimen/px36"
                    android:textStyle="bold"
                    android:textColor="@color/st_goodname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ราคารวม"/>
                <TextView
                    android:textSize="@dimen/px26"
                    android:textStyle="bold"
                    android:textColor="@color/st_goodname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/px36"
                android:textStyle="bold"
                android:textColor="#61b5e4"
                android:gravity="top|left"
                android:id="@+id/money"
                android:clickable="true"
                android:layout_width="@dimen/px300"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px16"
                android:text="sss"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/dopay"
                android:background="@drawable/st_selector_paytypes_qrcode"
                android:layout_width="@dimen/px230"
                android:layout_height="@dimen/px100">
                <TextView
                    android:textSize="@dimen/px32"
                    android:textStyle="bold"
                    android:textColor="@color/st_goodname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ดำเนินการต่อ"/>
                <TextView
                    android:textSize="@dimen/px26"
                    android:textStyle="bold"
                    android:textColor="@color/st_goodname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEXT"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/closeBtn"
            android:layout_width="@dimen/px760"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px300"
            android:layout_marginTop="@dimen/px50"
            android:layout_marginRight="@dimen/px300"
            android:layout_marginBottom="@dimen/px60">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/selector_button_money_en"
                android:layout_width="@dimen/px380"
                android:layout_height="@dimen/px100">
                <TextView
                    android:textSize="@dimen/px36"
                    android:textStyle="bold"
                    android:textColor="@color/st_goodname"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px42"
                    android:text="@string/button_cancel"/>
                <TextView
                    android:textSize="@dimen/px28"
                    android:textStyle="bold"
                    android:textColor="@color/st_goodname"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
