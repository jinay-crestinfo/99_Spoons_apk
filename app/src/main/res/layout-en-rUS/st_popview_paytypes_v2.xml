<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_corner_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="@dimen/px72"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center_horizontal"
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px60"
            android:text="@string/st_payTypes"/>
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/pay_qrcode"
            android:background="@drawable/st_selector_paytypes"
            android:clickable="true"
            android:layout_width="@dimen/px760"
            android:layout_height="@dimen/px200"
            android:layout_marginTop="@dimen/px60">
            <ImageView
                android:layout_width="@dimen/px161"
                android:layout_height="@dimen/px161"
                android:layout_marginLeft="@dimen/px70"
                android:src="@drawable/st_payqrcode"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/px54"
                android:textStyle="bold"
                android:textColor="@color/black_text_color"
                android:layout_width="@dimen/px420"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px265"
                android:text="@string/st_pay_qrcode"
                android:layout_centerVertical="true"
                android:textAlignment="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/pay_cash"
            android:background="@drawable/st_selector_paytypes"
            android:clickable="true"
            android:layout_width="@dimen/px760"
            android:layout_height="@dimen/px200"
            android:layout_marginTop="@dimen/px80">
            <ImageView
                android:layout_width="@dimen/px161"
                android:layout_height="@dimen/px161"
                android:layout_marginLeft="@dimen/px70"
                android:src="@drawable/st_paycash"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/px54"
                android:textStyle="bold"
                android:textColor="@color/black_text_color"
                android:layout_width="@dimen/px420"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px265"
                android:text="@string/st_pay_cash"
                android:layout_centerVertical="true"
                android:textAlignment="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/pay_card"
            android:background="@drawable/st_selector_paytypes"
            android:clickable="true"
            android:layout_width="@dimen/px760"
            android:layout_height="@dimen/px200"
            android:layout_marginTop="@dimen/px80">
            <ImageView
                android:layout_width="@dimen/px161"
                android:layout_height="@dimen/px161"
                android:layout_marginLeft="@dimen/px70"
                android:src="@drawable/st_paycard"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/px54"
                android:textStyle="bold"
                android:textColor="@color/black_text_color"
                android:layout_width="@dimen/px420"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px265"
                android:text="@string/st_pay_card"
                android:layout_centerVertical="true"
                android:textAlignment="center"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="@dimen/px760"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px300"
            android:layout_marginTop="@dimen/px100"
            android:layout_marginRight="@dimen/px300"
            android:layout_marginBottom="@dimen/px60">
            <TextView
                android:textSize="@dimen/px36"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/closeBtn"
                android:background="@drawable/selector_button_money_en"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150"
                android:text="@string/button_cancel"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
