<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:fitsSystemWindows="true">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_nine"/>
            <corners android:radius="@dimen/px15"/>
            <stroke
                android:width="@dimen/px6"
                android:color="#afd3e8"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff"/>
            <corners android:radius="@dimen/px15"/>
            <stroke
                android:width="@dimen/px6"
                android:color="#61b5e4"/>
        </shape>
    </item>
</selector>
