<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/px1020"
            android:layout_height="@dimen/px255"
            android:layout_marginTop="@dimen/px60">
            <View
                android:background="@drawable/img_topbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/px368"
                    android:layout_height="@dimen/px88"
                    android:src="@drawable/barlogo"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/px72"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center_horizontal"
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50"
            android:text="Order details"/>
        <include
            android:id="@+id/listheader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px170"
            layout="@layout/en_detail_item_layout"/>
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px510"
            android:dividerHeight="@dimen/px1"/>
        <include
            android:id="@+id/listfooter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px170"
            layout="@layout/en_detail_item_layout"/>
        <TextView
            android:textSize="@dimen/px36"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/swippay"
            android:background="@drawable/shape_corner_tip_en"
            android:clickable="true"
            android:layout_width="@dimen/px680"
            android:layout_height="@dimen/px120"
            android:layout_marginTop="@dimen/px80"
            android:layout_marginBottom="@dimen/px100"
            android:text="Click Here to Finish Payment"
            android:lineHeight="@dimen/px120"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/payTypes_contain"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px40">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px350">
                <CheckBox
                    android:textSize="@dimen/px36"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:gravity="center"
                    android:id="@+id/cash"
                    android:background="@drawable/selector_button_paytype"
                    android:clickable="true"
                    android:layout_width="@dimen/px240"
                    android:layout_height="@dimen/px120"
                    android:checked="true"
                    android:button="@null"
                    android:text="Cash"/>
                <TextView
                    android:textSize="@dimen/px18"
                    android:textColor="#000"
                    android:gravity="center"
                    android:id="@+id/cashnotice"
                    android:clickable="true"
                    android:layout_width="@dimen/px370"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px20"
                    android:text="Please use exact amount\10 on machine does not dispense cash"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px350"
                android:layout_marginLeft="@dimen/px120">
                <CheckBox
                    android:textSize="@dimen/px36"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:gravity="center"
                    android:id="@+id/card"
                    android:background="@drawable/selector_button_paytype"
                    android:clickable="true"
                    android:layout_width="@dimen/px240"
                    android:layout_height="@dimen/px120"
                    android:checked="false"
                    android:button="@null"
                    android:text="Card"/>
                <TextView
                    android:textSize="@dimen/px18"
                    android:textColor="#000"
                    android:gravity="center"
                    android:id="@+id/cardnotice"
                    android:clickable="true"
                    android:layout_width="@dimen/px400"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px20"
                    android:text="after card is selected\10 insert the card now. For AMEX swipe only"/>
                <ImageView
                    android:layout_width="@dimen/px280"
                    android:layout_height="@dimen/px40"
                    android:layout_marginTop="@dimen/px20"
                    android:src="@drawable/img_cards"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30">
            <TextView
                android:textSize="@dimen/px36"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/back"
                android:background="@drawable/selector_button_back"
                android:layout_width="@dimen/px320"
                android:layout_height="@dimen/px150"
                android:text="&lt; Back"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/px36"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/enterpromo"
                android:background="@drawable/selector_button_next"
                android:clickable="true"
                android:layout_width="@dimen/px320"
                android:layout_height="@dimen/px150"
                android:text="enter\10 promo code"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/px36"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/totalprice"
                android:background="@drawable/selector_button_money_en"
                android:clickable="true"
                android:layout_width="@dimen/px320"
                android:layout_height="@dimen/px150"
                android:text="$ 4.00"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
